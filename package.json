{
  "name": "winston-ready",
  "version": "2.0.3",
  "main": "index.js",
  "description": "A ready-to-use Winston-Logger configuration",
  "author": "Leandro Di Lorenzo <leandro.jdl@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/leandrojdl/winston-ready"
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "lint": "eslint *.js test/**/*.js",
    "show-me": "node show-me.js",
    "release": "dotenv release-it",
    "test": "jest --verbose",
    "test:ci": "jest --verbose --coverage"
  },
  "dependencies": {
    "dotenv": "^10.0.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "devDependencies": {
    "coveralls": "^3.1.1",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.31.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "jest-extended": "^0.11.5",
    "release-it": "^14.10.0"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run lint",
        "npm test"
      ]
    },
    "git": {
      "commitMessage": ":bookmark: v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}"
    },
    "npm": {
      "publish": true
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "clover",
      "html"
    ],
    "collectCoverageFrom": [
      "index.js"
    ]
  },
  "keywords": [
    "logger",
    "winston"
  ]
}
